{
  "compilerOptions": {
    "target": "ES5",
    "module": "ES2015",
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@m/*": [
        "src/modules/*"
      ],
      "@cp/*": [
        "src/components/*"
      ]
    },
    "declaration": true,
    "declarationDir": "./dist",
    "jsx": "preserve"
  },
  "include": [
    "src/*.ts",
    "src/*.vue"
  ],
  "exclude": [
    "node_modules"
  ]
}
